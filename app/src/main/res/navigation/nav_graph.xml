<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.example.vinilos.ui.views.AlbumFragment"
        android:label="Albums"
        tools:layout="@layout/album_fragment">
        <action
            android:id="@+id/action_albumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>

    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.example.vinilos.ui.views.AlbumDetailFragment"
        android:label="Album Detail"
        tools:layout="@layout/album_detail_fragment">
        <argument
            android:name="album"
            app:argType="com.example.vinilos.data.models.Album" />
    </fragment>

    <fragment
        android:id="@+id/artistFragment"
        android:name="com.example.vinilos.ui.views.ArtistFragment"
        android:label="Artistas"
        tools:layout="@layout/artist_fragment" />
</navigation>
